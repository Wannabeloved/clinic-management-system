doctype html
html
  head
    title #{title} | Клиника
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    block styles
  body
    nav.navbar.navbar-expand.navbar-dark.bg-primary
      .container
        a.navbar-brand(href="/") Клиника
        .navbar-nav.ml-auto
          if user
            a.nav-link(href="/applications" class=path === '/applications' ? 'active' : '') Заявки
            a.nav-link(href="/logout") Выйти
          else
            a.nav-link(href="/submit-form" class=path === '/submit-form' ? 'active' : '') Отправить заявку
            a.btn.btn-outline-light.ml-2(href="/login") Продолжить как работник

    .container.mt-4
      block content

    block scripts
      script(src="https://code.jquery.com/jquery-3.5.1.min.js")
      script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js")
      script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
